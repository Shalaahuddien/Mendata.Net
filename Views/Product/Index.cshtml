@using System.Collections;
@model List<Mendata.Net.Models.Entities.Barang>
@{
    ViewBag.Title = "Data Produk";
}

<h2 class="text-center">Data Barang</h2>

<table class="table table-striped mt-5">

    <thead>

        <th scope="col">Kode Barang</th>
        <th scope="col">Nama Barang</th>
        <th scope="col">Deskripsi</th>
        <th scope="col">Harga</th>
        <th scope="col">Stok</th>
        <th scope="col">Image</th>
        <th scope="col" class="text-center">Action</th>
        </tr>

    </thead>

    <tbody class="table-light">

        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.IdPenjual</td> *@
                    <td>@item.Kode</td>
                    <td>@item.Nama</td>
                    <td>@item.Description</td>
                    <td>@item.Harga</td>
                    <td class="text-center">@item.Stok</td>
                    <td><img src="@item.FileName" /></td>
                    <td class="text-center">

                    <td class="thead">
                        <img src="@item.Url" alt="pic" width="300" height="150" />
                    </td>

                    <td>
                        <a class="btn btn-success" asp-route-id="@item.Id" asp-controller="Product"
                    asp-action="Editdata">Update</a>
                            @* <a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Barang"
                                asp-action="Detail">Detail</a> *@
                        <a class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Product"
                    asp-action="Delete">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <h1>Data pembeli null</h1>
        }

    </tbody>
    </thead>

    <th>
        <a class="btn btn-primary" asp-controller="Product" asp-action="Inputdata">Input Data Produk</a>
    </th>
</table>
